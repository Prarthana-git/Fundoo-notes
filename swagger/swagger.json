  "paths": {
      "/register": {
          "post": {
              "tags": [
                  "Register"
              ],
              "description": "Register new user",
              "parameters": [
                  {
                      "name": "Register",
                      "in": "body",
                      "description": "User that we want to register",
                      "schema": {
                          "$ref": "#/definitions/User"
                      }
                  }
              ],
              "produces": [
                  "application/json"
              ],
              "responses": {
                  "201": {
                      "description": "New user is Registered"
                  },
                  "409": {
                      "description": "User already exist"
                  },
                  "500": {
                      "description": "Internal server error"
                  }
              }
          }
      },
      "/login": {
          "post": {
              "tags": [
                  "Login"
              ],
              "description": "Login user",
              "parameters": [
                  {
                      "name": "Login",
                      "in": "body",
                      "description": "User that we want to login",
                      "schema": {
                          "$ref": "#/definitions/LoginUser"
                      }
                  }
              ],
              "produces": [
                  "application/json"
              ],
              "responses": {
                  "200": {
                      "description": "ok"
                  },
                  "404": {
                      "description": "Not Found"
                  }
              }
          }
      },
      "/forgot-passowrd": {
          "post": {
              "tags": [
                  "ForgotPassword"
              ],
              "Summary": "user receives email of resetlink to reset password",
              "parameters": [
                  {
                      "name": "email",
                      "in": "body",
                      "schema": {
                          "$ref": "#/definitions/forgotPassword"
                      }
                  }
              ],
              "responses": {
                  "200": {
                      "description": "Successful"
                  },
                  "400": {
                      "description": "Bad Request"
                  },
                  "404": {
                      "description": "Not Found"
                  },
                  "500": {
                      "description": "Internal Error"
                  }
              }
          }
      },
      "/reset-password": {
          "put": {
              "tags": [
                  " resetPassword"
              ],
              "Summarry": "reset password",
              "parameters": [
                  {
                      "name": "resetPassword",
                      "in": "body",
                      "schema": {
                          "$ref": "#/definitions/resetPassword"
                      }
                  },
                  {
                      "name":"token",
                      "in": "header"
                  }
              ],
              "responses": {
                  "200": {
                      "description": "Successful"
                  },
                  "401": {
                      "description": "Unauthorized User"
                  },
                  "500": {
                      "description": "Internal Error"
                  }
              }
            }
        },
      "/createnotes": {
        "post": {
            "tags": ["Notes"],
            "description": "creating notes",
            "parameters": [{
                "name": "create notes",
                "in": "body",
                "required": true,
                "schema": {
                    "$ref": "#/definitions/Notes"
                }
            }],
            "responses": {
                "201": {
                    "description": "Registered"
                },
                "400": {
                    "description": "Bad Request"
                },
                "500": {
                    "description": "Internal Server Error"
                }
            },
            "security": [{
                "JWT": []
            }]
        }
    },
    "/getnotes": {
        "get": {
            "tags": ["Notes"],
            "description": "get notes",
            "parameters": [],
            "responses": {
                "200": {
                    "description": "Successful"
                },
                "400": {
                    "description": "Bad Request"
                },
                "401": {
                    "description": "Unauthorized"
                },
                "500": {
                    "description": "Internal Server Error"
                }
            },
            "security": [{
                "JWT": []
            }]
        }
    },
    "/note/{notesId}": {
        "put": {
            "tags": ["Notes"],
            "description": "update note using ID",
            "parameters": [{
                    "name": "notesId",
                    "in": "path",
                    "required": true,
                    "type": "string"
                },
                {
                   "name": "new NotesDetails",
                    "in": "body",
                    "required": true,
                    "schema": {
                        "$ref": "#/definitions/Notes"
                    }
                }
            ],
            "responses": {
                "200": {
                    "description": "Successful"
                },
                "400": {
                    "description": "Bad Request"
                },
                "401": {
                    "description": "Unauthorized"
                },
                "404": {
                    "description": "Not Found"
                },
                "500": {
                    "description": "Internal Server Error"
                }
            },
            "security": [{
                "JWT": []
            }]
        }
    },
    "/deletenote/{:notesId}": {
        "delete": {
          "tags": [
            "Notes"
          ],
          "description": "delete user data by id from system",
          "parameters": [
            {
              "name": ":notesId",
              "in": "path",
              "required": true,
              "type": "string"
            }
          ],
          "produces": [
            "application/json"
          ],
          "responses": {
            "200": {
              "description": "Success"    
            },
            "400": {
              "description": "Bad Request"
            },
            "404": {
              "description": "Not found"
            },
            "500": {
              "description": "Internal server error"
            }
          },
          "security":[{
            "JWT" :[]
          }]
        }
    }
},
      "securityDefinitions": {
          "JWT": {
              "type": "apiKey",
              "name": "token",
              "in": "Headers"
          }
      },
      "definitions": {
          "User": {
              "type": "object",
              "properties": {
                  "firstName": {
                      "type": "string"
                  },
                  "lastName": {
                      "type": "string"
                  },
                  "email": {
                      "type": "string"
                  },
                  "password": {
                      "type": "string"
                  }
              }
          },
          "LoginUser": {
              "type": "object",
              "properties": {
                  "email": {
                      "type": "string"
                  },
                  "password": {
                      "type": "string"
                  }
              }
          },
          "forgotPassword": {
              "type": "object",
              "properties": {
                  "email": {
                      "type": "string"
                  }
              }
          },
          "resetPassword": {
              "type": "object",
              "properties": {
                  "password": {
                      "type": "string"
                  }
              }
          },     "Notes": {
            "type": "object",
            "properties": {
                "title": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                }
            }
        }
      }
  }
